import java.util.List;


public class Vertice {
	private int id;
	private int colour;
	private int numberOfUncolouredNeighbours;
	private List<Integer> neighbourIDs;
	
	public Vertice(int idIn, int colourIn){
		setId(idIn);
		colour = colourIn;
		numberOfUncolouredNeighbours = numberOfUncolouredNeighboursIn;
		
	}

	public List<Integer> getNeighbourIDs() {
		return neighbourIDs;
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

}
